{
	"name": "gritstore",
	"version": "1.1.0",
	"description": "The caching mechanism for grit",
	"main": "dist/index.js",
	"bin": {
		"grit": "dist/cli/index.js"
	},
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"/cli.js",
		"!**/*.(test|spec).ts"
	],
	"scripts": {
		"start": "npm run build && npm run cli",
		"build:watch": "nodemon --watch src -e ts --ignore dist --exec npm run build",
		"build": "npm run clean && tsup src/index.ts --dts",
		"clean": "rimraf ./dist",
		"test": "jest",
		"lint": "eslint . --fix",
		"prepublishOnly": "npm run build",
		"release": "dotenv release-it",
		"release:ci": "dotenv release-it --ci"
	},
	"license": "MIT",
	"engines": {
		"node": ">=12"
	},
	"dependencies": {
		"@types/axios": "^0.14.0",
		"axios": "^0.24.0",
		"dot-prop": "^6.0.1",
		"grit-cli": "^0.5.8",
		"gritparse": "^0.2.0",
		"swaglog": "^0.0.0",
		"youtill": "^0.1.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.8",
		"@babel/core": "^7.15.5",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.15.4",
		"@babel/preset-typescript": "^7.15.0",
		"@egoist/extract-zip": "^2.0.1",
		"@types/chalk": "^2.2.0",
		"@types/chokidar": "^2.1.3",
		"@types/commander": "^2.12.2",
		"@types/cross-spawn": "^6.0.2",
		"@types/ejs": "^3.0.4",
		"@types/figlet": "^1.5.4",
		"@types/fs-extra": "^9.0.1",
		"@types/hash-sum": "^1.0.0",
		"@types/ini": "^1.3.30",
		"@types/inquirer": "^8.1.3",
		"@types/jest": "^27.0.3",
		"@types/lodash": "^4.14.176",
		"@types/micromatch": "^4.0.1",
		"@types/mkdirp": "^1.0.2",
		"@types/move-file": "^1.1.0",
		"@types/node": "^16.7.10",
		"@types/parse-package-name": "^0.1.0",
		"@types/rimraf": "^3.0.2",
		"@types/sinon": "^10.0.6",
		"@types/text-table": "^0.2.1",
		"@types/update-notifier": "^4.1.0",
		"@typescript-eslint/eslint-plugin": "^2.33.0",
		"@typescript-eslint/parser": "^2.33.0",
		"alias-hq": "^5.2.1",
		"babel-jest": "^27.1.0",
		"babel-plugin-module-resolver": "^4.1.0",
		"cz-conventional-changelog": "3.2.0",
		"dotenv-cli": "^4.0.0",
		"env-paths": "^2.2.0",
		"esbuild": "^0.13.10",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"ini": "^1.3.5",
		"jest": "^26.0.1",
		"prettier": "^2.3.2",
		"release-it": "^14.11.8",
		"ts-node": "^8.10.2",
		"tsup": "^5.5.0",
		"type-fest": "^2.5.2",
		"typedoc": "^0.22.10",
		"typescript": "^4.1.2",
		"yarn-global": "^1.2.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"keywords": []
}
